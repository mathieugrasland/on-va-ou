rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour la collection users
    match /users/{userId} {
      // Un utilisateur peut seulement lire/écrire ses propres données
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les futures collections (bars, groupes, etc.)
    match /bars/{barId} {
      // Lecture publique des bars, écriture pour les admins seulement
      allow read: if true;
      allow write: if false; // À modifier plus tard selon vos besoins
    }
    
    match /groups/{groupId} {
      // Les membres du groupe peuvent lire et écrire
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.members;
    }
    
    // Bloquer tout autre accès
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
