// üîê Firestore Security Rules - Version 1.1.0 (Temporaire pour debug)
// Derni√®re modification: 2025-08-27
// TODO: Ajouter r√®gles pour les groupes d'amis et recommandations de bars

service cloud.firestore {
  match /databases/{database}/documents {
    // R√®gles temporaires plus permissives pour tester l'inscription
    match /users/{userId} {
      // Permettre l'√©criture pour les utilisateurs authentifi√©s (temporaire)
      allow read, write: if request.auth != null;
    }
    
    // R√®gles pour les futures collections (bars, groupes, etc.)
    match /bars/{barId} {
      // Lecture publique des bars, √©criture pour les admins seulement
      allow read: if true;
      allow write: if false; // √Ä modifier plus tard selon vos besoins
    }
    
    match /groups/{groupId} {
      // Les membres du groupe peuvent lire et √©crire
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.members;
    }
    
    // Bloquer tout autre acc√®s
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
